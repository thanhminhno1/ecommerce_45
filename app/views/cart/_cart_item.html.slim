tr
  td.text-center
    = image_tag product.image.url(:medium)
  td.text-center
    = product.name
    br>/
    = product.description
    br/
  td.text-center.price = product.price
  td.text-center
      input class="quantity" type="number" value="#{product.quantity_in_cart}" style="max-width:60px" data-product="#{product.id}"
      button class="btn btn-danger cart_remove" data-href="#{remove_cart_path(product.id)}"
        span.fa.fa-trash
  td.text-center.total_in_row = product.price * product.quantity_in_cart.to_i
